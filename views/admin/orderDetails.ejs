                                                <span id="status<%= orderData[i]._id %>" class="badge rounded-pill alert-dark"><%= orderData[i].status %></span>
                                              <%}else if(orderData[i].status === 'shipped'){%>
                                                <span id="status<%= orderData[i]._id %>" class="badge rounded-pill alert-info"><%= orderData[i].status %></span>
                                              <%}else if(orderData[i].status === 'outForDelivery'){%>

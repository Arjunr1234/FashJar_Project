<script>
    function deleteCart(productId, size, userId) {

        Swal.fire({
            text: "Do you want to delete the item from the cart?",
            buttons: ["cancel", true],
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    url: `/deleteCartItems?id=${productId}&size=${size}&userId=${userId}`,
                    method: 'GET',
                    contentType: 'application/json',
                    success: function (response) {
                        if (response.response) {
                            console.log("A response is received from deleteCartItems");
                            location.reload();
                        } else {
                            console.log("Cart data is not deleted");
                            location.reload();
                        }
                    }
                });
            }
        });
    }
    

   
     
